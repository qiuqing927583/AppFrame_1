<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView 
            android:layout_width="@dimen/sdicsize"
            android:layout_height="@dimen/sdicsize"
            android:layout_marginTop="@dimen/sdicdistance"
            android:layout_marginBottom="@dimen/sdicdistance"
            android:layout_centerVertical="true"
            android:id="@+id/ico"
            android:background="@drawable/android_desktop"
            android:layout_marginLeft="10dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_toRightOf="@id/ico"
            android:layout_centerVertical="true"
            android:id="@+id/filename"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
</LinearLayout>
