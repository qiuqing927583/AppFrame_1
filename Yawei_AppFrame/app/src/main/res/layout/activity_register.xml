<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/reletivelayout"
        style="@style/titlestype"
        android:background="#fafafa">
        <LinearLayout
            android:id="@+id/LinTopBack"
            style="@style/titlebutton"
            android:layout_marginLeft="5.0dp"
            android:background="#fafafa">
            <ImageView
                style="@style/titleimagesyple"
                android:background="@drawable/back"
                android:backgroundTint="#3f3f3f"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fileName"
            style="@style/toptip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/LinTopBack"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:textColor="#3f3f3f"
            android:singleLine="true"
            android:text="@string/facebuild"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@id/reletivelayout"
        android:background="@color/white">
        <ImageView
            android:id="@+id/avatar_iv"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/userhead" />
        <Button
            android:id="@+id/detect_btn"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:text="人脸采集" />
        <Button
            android:id="@+id/pick_from_album_btn"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:text="从相册选取"/>
        <Button
            android:id="@+id/submit_btn"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:text="确认并绑定当前账号" />
    </LinearLayout>
</RelativeLayout>
