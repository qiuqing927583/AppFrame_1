<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/ItemImage"
        style="@style/morechildimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <ImageView
        android:id="@+id/appAdd"
        style="@style/redactmoudle"
        android:layout_toRightOf="@id/ItemImage"
        android:textColor="@color/white"
        android:background="@drawable/ic_add_circle"
        android:gravity="center"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/appDel"
        style="@style/redactmoudle"
        android:layout_toRightOf="@id/ItemImage"
        android:textColor="@color/white"
        android:background="@drawable/ic_do_not_disturb_on"
        android:gravity="center"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/emailCount"
        style="@style/maingridemialnum"
        android:layout_toRightOf="@id/ItemImage"
        android:textColor="@color/white"
        android:background="@drawable/noreademail"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/emailunread"/>

    <TextView
        android:id="@+id/ItemText"
        style="@style/moreappchildstype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ItemImage"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:textColor="@color/black"/>

</RelativeLayout>
