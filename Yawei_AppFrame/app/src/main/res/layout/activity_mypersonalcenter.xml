<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/relatTop"
        style="@style/titlestype" >

        <LinearLayout
            android:id="@+id/LinTopBack"
            style="@style/titlebutton"
            android:layout_marginLeft="5.0dp" >
            <ImageView
				style="@style/titleimagesyple"
                android:src="@drawable/back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/goback"
				style="@style/titletextstyle"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tip"
            style="@style/toptip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人中心" />
    </RelativeLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/white"
			android:orientation="vertical">
			<!--头-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:background="#d8e3e6">
				<com.android.yawei.jhoa.ui.XCRoundImageView
					android:layout_width="65dp"
					android:layout_height="65dp"
					android:src="@drawable/userhead"
					android:id="@+id/imghead"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="20dp"
					android:layout_marginLeft="5dp"/>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:layout_marginTop="15dp"
					android:orientation="vertical">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:textSize="20sp"
						android:id="@+id/userName"
						android:textStyle="bold"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:textSize="15sp"
						android:singleLine="true"
						android:id="@+id/userLoginName"
						android:layout_marginTop="5dp"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/black"
						android:textSize="15sp"
						android:singleLine="true"
						android:id="@+id/userDepartment"/>
				</LinearLayout>
			</LinearLayout>
			<!--中-->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10.0dp"
				android:layout_marginLeft="10.0dp"
				android:layout_marginRight="10.0dp"
				android:layout_marginTop="30.0dp"
				android:orientation="vertical">
				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/linearlayoutrounded"
					android:orientation="vertical">
					<!--我的登录日志-->
					<LinearLayout
						style="@style/selfCenterLinear"
						android:id="@+id/linwddlrz">
						<ImageView
							style="@style/selfCenterImage"
							android:background="@drawable/ic_login_log"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="我的登录日志"
							android:textSize="18sp"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							android:textColor="#ff5d5d5d"
							android:layout_marginLeft="5dp"/>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:background="@drawable/ic_arrow_right"
								android:layout_alignParentRight="true"
								android:layout_centerVertical="true"
								android:layout_marginRight="10dp"/>
						</RelativeLayout>
					</LinearLayout>
					<!--登录方式-->
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="0.5dp"
						android:background="@drawable/list_divider"
						android:layout_marginLeft="1dp"
						android:layout_marginRight="1dp"/>
					<LinearLayout
						style="@style/selfCenterLinear"
						android:id="@+id/loginmodel">
						<ImageView
							style="@style/selfCenterImage"
							android:background="@drawable/ic_login_input"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="多方式登录"
							android:textSize="18sp"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							android:textColor="#ff5d5d5d"
							android:layout_marginLeft="5dp"/>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:background="@drawable/ic_arrow_right"
								android:layout_alignParentRight="true"
								android:layout_centerVertical="true"
								android:layout_marginRight="10dp"/>
						</RelativeLayout>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<!--下-->
			<LinearLayout
