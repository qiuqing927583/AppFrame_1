						 android:layout_width="match_parent"
						 android:layout_height="0.5dp"
						 android:background="@drawable/list_divider"
						 android:layout_marginLeft="1dp"
						 android:layout_marginRight="1dp"
						 android:id="@+id/linexgmm"
						 android:visibility="gone"/>
					<LinearLayout
						style="@style/selfCenterLinear"
						android:id="@+id/linxgmm"
						android:visibility="gone">
						<ImageView
							style="@style/selfCenterImage"
							android:background="@drawable/ic_version"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="修改密码"
							android:textSize="18sp"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							android:textColor="#ff5d5d5d"
							android:layout_marginLeft="5dp"/>
							<RelativeLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content">
								<ImageView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:background="@drawable/ic_arrow_right"
									android:layout_alignParentRight="true"
									android:layout_centerVertical="true"
									android:layout_marginRight="10dp"/>
							</RelativeLayout>
						</LinearLayout>
					<!--版本信息-->
					<ImageView
						android:layout_width="match_parent"
						android:layout_height="0.5dp"
						android:background="@drawable/list_divider"
						android:layout_marginLeft="1dp"
						android:layout_marginRight="1dp"/>
					<LinearLayout
						style="@style/selfCenterLinear"
						android:id="@+id/linbbxx">
						<ImageView
							style="@style/selfCenterImage"
							android:background="@drawable/ic_version"/>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="版本信息"
							android:textSize="18sp"
							android:layout_marginTop="8dp"
							android:layout_marginBottom="8dp"
							android:textColor="#ff5d5d5d"
							android:layout_marginLeft="5dp"/>
						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:id="@+id/imgnew"
							android:layout_marginLeft="20dp"
							android:background="@drawable/newversion"
							android:visibility="gone"/>
						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">
							<ImageView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:background="@drawable/ic_arrow_right"
								android:layout_alignParentRight="true"
								android:layout_centerVertical="true"
								android:layout_marginRight="10dp"/>
						</RelativeLayout>
					</LinearLayout>
					<!--安全保密规定-->
					<ImageView
						android:visibility="gone"
						android:layout_width="match_parent"
						android:layout_height="0.5dp"
						android:background="@drawable/list_divider"
						android:layout_marginLeft="1dp"
						android:layout_marginRight="1dp"/>
					<LinearLayout
						android:visibility="gone"
						style="@style/selfCenterLinear"
						android:id="@+id/linawbm">
						<ImageView
							style="@style/selfCenterImage"
							android:background="@drawable/ic_report"/>
						<TextView
