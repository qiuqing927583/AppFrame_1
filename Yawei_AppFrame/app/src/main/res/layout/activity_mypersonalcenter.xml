				android:layout_height="wrap_content"
				android:layout_marginBottom="10.0dp"
				android:layout_marginLeft="10.0dp"
				android:layout_marginRight="10.0dp"
				android:layout_marginTop="30.0dp"
				android:orientation="vertical">
				<LinearLayout
