<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/reletivelayout"
        style="@style/titlestype"
        android:background="#fafafa"
        android:layout_alignParentTop="true">
        <LinearLayout
            android:id="@+id/LinTopBack"
            style="@style/titlebutton"
            android:layout_marginLeft="5.0dp"
            android:background="#fafafa">
            <ImageView
                style="@style/titleimagesyple"
                android:background="@drawable/back"
                android:backgroundTint="#3f3f3f"/>
        </LinearLayout>
        <TextView
            android:id="@+id/fileName"
            style="@style/toptip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_toRightOf="@id/LinTopBack"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:textColor="#3f3f3f"
            android:singleLine="true"
            android:text="指纹识别"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fingerprint_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/fingerprint_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/fingerprint_description"
            android:textColor="?android:attr/textColorSecondary" />
        <ImageView
            android:id="@+id/fingerprint_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_fp_40px"
            android:layout_below="@+id/fingerprint_description"
            android:layout_alignStart="@+id/fingerprint_description"/>
        <TextView
            android:id="@+id/fingerprint_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/fingerprint_icon"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/fingerprint_icon"
            android:gravity="center_vertical"
            android:text="@string/fingerprint_hint"
            android:textSize="24sp"
            android:textColor="@color/blue"/>
    </RelativeLayout>
</LinearLayout>
