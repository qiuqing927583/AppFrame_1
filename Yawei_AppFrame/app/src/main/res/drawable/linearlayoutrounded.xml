<?xml version="1.0" encoding="utf-8"?>
<!-- linearlayout 圆角效果 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    <solid android:color="#f5f5f5" /><!-- 内部填充色 -->
    <stroke
        android:width="0.2dp"
        android:color="#c7c7c7" /><!-- 边框色 -->
    <!-- 这个可以不加，padding用不上
    <padding
        android:bottom="1dp"
        android:left="0.5dp"
        android:right="0.5dp"
        android:top="0dp" /> -->
    <!-- 圆角-->
    <corners
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        android:topLeftRadius="5dp"
        android:topRightRadius="5dp" /> 

</shape>
